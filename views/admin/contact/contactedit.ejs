<%- include('../../header.ejs')%>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/blog">Blogs</a></li>
                            <li><a href="/admin/category">Categories</a></li>
                            <li><a href="/admin/contactdisplay" class="active">Contact</a></li>
                            <li><a href="/admin/about">About</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Edit Contact of <%= contactedit._id %></h1>
                            </div>

                        </div>

                        <form method="post" action="/contactupdate/<%= contactedit._id %>">

                            <div class="form-group form-row">
                                <label class="col-md-3 required">Name *</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="name" value="<%= contactedit.name %>"
                                        placeholder="name" required>
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <label class="col-md-3 required">Contact Number *</label>
                                <div class="col-md-9">
                                    <input type="number" class="form-control" name="contact"
                                        value="<%= contactedit.contact %>" placeholder="contact" required>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3 required">Email Address *</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="email"
                                        value="<%= contactedit.email %>" placeholder="email" required>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3 required">Message *</label>
                                <div class="col-md-9">
                                    <textarea name="message" rows="5" placeholder="Message class=" form-control"
                                        required> <%= contactedit.message %> </textarea>
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                    <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">close</button> -->
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../../footer.ejs')%>
