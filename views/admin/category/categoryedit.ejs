<%- include('../../header.ejs')%>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/blog">Blogs</a></li>
                            <li><a href="/admin/category" class="active">Categories</a></li>
                            <li><a href="/admin/contactdisplay">Contact</a></li>
                            <li><a href="/admin/about">About</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Edit Category of <%= categoryedit._id %></h1>
                            </div>

                        </div>

                        <form method="post" action="/categoryupdate/<%= categoryedit._id %>"
                            encType="multipart/form-data">

                            <div class="form-group form-row">
                                <label class="col-md-3 required">Category name *</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="title"
                                        value="<%= categoryedit.category_name %>" placeholder="category_name" required>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3">Upload Image</label>
                                <div class="col-md-9">
                                    <input type="file" name="image">
                                    <img src="<%=categoryedit.image.url %>" width="50px">
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                    <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">close</button> -->
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../../footer.ejs')%>
